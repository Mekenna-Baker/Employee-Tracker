{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                 
    "outDir": "./dist",                                  
    "rootDir": "./src",                                  
    "strict": true,                                     
   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,                                
   
    "sourceMap": true,                                   

    "resolveJsonModule": true,                           
    "typeRoots": ["./node_modules/@types"],              
    "types": ["node"]                                    
  },
  "include": [
    "src/**/*.ts"                                        
  ],
  "exclude": [
    "node_modules"                                       
  ]
}
